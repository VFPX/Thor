	*< OBJECTDATA: ObjPath="gridKeys.ColumnCheckBox.Header1" UniqueID="" Timestamp="" />
	*< OBJECTDATA: ObjPath="gridKeys.ColumnCheckBox.check1" UniqueID="" Timestamp="" />

	#INCLUDE "thor_ui.h"
