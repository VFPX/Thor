		Else
			Insert Into ToolBarTools									;
				(PRGName, Enabled, ToolTip, Order, Icon) Values			;
				(lcPRGName, This.Value, lcPrompt, lnMaxOrder, ccThorIcon)
		Endif
		
		If This.Value
			This.Parent.Parent.ContextMenuForToolBar()
		Endif
		
